<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:background="@drawable/unitlist_selector"
                android:padding="4dip" >

    <ImageView
        android:id="@+id/status_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_help_black_48dp" />

    <TextView
        android:id="@+id/unit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toEndOf="@id/status_icon"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:text="Rufius"
        android:textColor="#ff000000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/unit_desription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toEndOf="@id/status_icon"
        android:layout_above="@id/unit_name"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:text="Description"
        android:textColor="#ff000000"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/edge_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>

    <ImageView
        android:id="@+id/info_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_toStartOf="@id/edge_icon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="4dp"
        android:background="#00000000"
        android:src="@drawable/ic_notifications_off_black_48dp" />

    <ImageView
        android:id="@+id/snap_icon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_toStartOf="@id/info_icon"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="4dp"
        android:background="#00000000"
        android:src="@drawable/ic_party_mode_off_black_48dp" />

</RelativeLayout><!-- From: file:/Users/lykanthrop/Projects/Rufius/app/src/main/res/layout/unit_list_item.xml -->