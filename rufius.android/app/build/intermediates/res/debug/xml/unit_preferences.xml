<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
	<PreferenceCategory
		android:title="Info">
		<EditTextPreference
			android:defaultValue=""
			android:inputType="textNoSuggestions"
			android:key="unit"
			android:summary="@string/smmr_unit_name"
			android:title="@string/prfn_unit_name"/>
		<EditTextPreference
			android:defaultValue=""
			android:inputType="textNoSuggestions"
			android:key="desc"
			android:summary="@string/smmr_unit_description"
			android:title="@string/prfn_unit_description"/>
		</PreferenceCategory>
	<PreferenceCategory
		android:title="User">
		<EditTextPreference
			android:defaultValue=""
			android:inputType="textNoSuggestions"
			android:key="user"
			android:summary="@string/smmr_username"
			android:title="@string/prfn_username"/>
		<CheckBoxPreference
			android:defaultValue="true"
			android:key="auth"
			android:summary="@string/smmr_key_auth"
			android:title="@string/prfn_key_auth"/>
		<EditTextPreference
			android:defaultValue=""
			android:inputType="textUri"
			android:key="key"
			android:dependency="auth"
			android:summary="@string/smmr_key_path"
			android:title="@string/prfn_key_path"/>
	</PreferenceCategory>
	<PreferenceCategory
		android:title="Network">
		<EditTextPreference
			android:defaultValue=""
			android:inputType="textNoSuggestions"
			android:key="in_ip"
			android:summary="@string/smmr_server_intra_ip"
			android:title="@string/prfn_server_intra_ip"/>
		<EditTextPreference
			android:defaultValue=""
			android:inputType="number"
			android:key="port"
			android:numeric="integer"
			android:summary="@string/smmr_port"
			android:title="@string/prfn_port"/>
		<CheckBoxPreference
			android:key="statik"
			android:defaultValue="false"
			android:summary="@string/smmr_statik_ip"
			android:title="@string/prfn_statik_ip"/>
		<EditTextPreference
			android:key="st_ip"
			android:defaultValue=""
			android:dependency="statik"
			android:inputType="textNoSuggestions"
			android:summary="@string/smmr_server_inter_ip"
			android:title="@string/prfn_server_inter_ip"/>
		<EditTextPreference
			android:defaultValue=""
			android:inputType="textEmailAddress"
			android:key="email"
			android:summary="@string/smmr_server_email"
			android:title="@string/prfn_server_email"/>
		</PreferenceCategory>
	<PreferenceCategory
		android:title="Miscellaneous">
		<CheckBoxPreference
			android:key="auto"
			android:defaultValue="true"
			android:summary="@string/smmr_auto_switch"
			android:title="@string/prfn_auto_switch"/>
		<ListPreference
			android:key="time"
			android:defaultValue="None"
			android:entries="@array/time_entries"
			android:entryValues="@array/time_entry_values"
			android:summary="@string/smmr_grace_time"
			android:title="@string/prfn_grace_time"/>
	</PreferenceCategory>
</PreferenceScreen><!-- From: file:/Users/lykanthrop/Projects/Rufius/app/src/main/res/xml/unit_preferences.xml -->